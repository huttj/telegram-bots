# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
AUTHORIZED_USER_ID=your_telegram_user_id_here

# Groq API (free tier available at https://console.groq.com)
GROQ_API_KEY=your_groq_api_key_here

# OpenRouter API (for embeddings and optional AI inference)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Cloudflare R2 Storage (optional but recommended)
R2_ACCOUNT_ID=your_r2_account_id
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET_NAME=voice-journal

# Webhook Configuration (for production deployment)
# Leave empty for local development (will use polling)
WEBHOOK_DOMAIN=https://your-app.fly.dev
PORT=3000
